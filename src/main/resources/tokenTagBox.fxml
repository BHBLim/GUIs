<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Group?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<fx:root type="HBox" xmlns="http://javafx.com/javafx/8.0.60" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <javafx.scene.layout.VBox>
         <children>
            <HBox alignment="CENTER">
               <children>
                  <Label alignment="CENTER" focusTraversable="false" text="# " />
                  <Label fx:id="tokenIndexLabel" text="Number" />
               </children>
            </HBox>
            <HBox alignment="CENTER">
               <children>
                  <Button fx:id="selectSingleButton" alignment="CENTER" mnemonicParsing="false" onAction="#handleSelectSingleButton" text="X" />
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="17.0" prefWidth="53.0">
               <children>
                  <CheckBox fx:id="selectedCheckbox" alignment="CENTER" contentDisplay="GRAPHIC_ONLY" graphicTextGap="0.0" mnemonicParsing="false" onAction="#handleSelectedCheckbox" textAlignment="CENTER" />
               </children>
            </HBox>
            <HBox alignment="CENTER">
               <children>
                  <Label fx:id="tokenLabel" alignment="CENTER" text="Token" textAlignment="CENTER" />
               </children>
            </HBox>
            <TextField fx:id="tagCodeTextField" alignment="CENTER" onAction="#handleTagCodeField" prefHeight="25.0" prefWidth="41.0" promptText="Tag" />
            <MenuButton alignment="CENTER" contentDisplay="GRAPHIC_ONLY" graphicTextGap="0.0" mnemonicParsing="false" prefHeight="25.0" prefWidth="49.0" text="M" textAlignment="CENTER">
              <items>
                <MenuItem fx:id="insertTokenAfterMenuItem" mnemonicParsing="false" text="Insert token after">
                     <graphic>
                        <TextField fx:id="editTokenTextField" alignment="CENTER" onAction="#handleEditTokenTextField" promptText="Edit" />
                     </graphic>
                  </MenuItem>
                <MenuItem fx:id="insertTokenBeforeMenuItem" mnemonicParsing="false" text="Insert token before" />
                  <MenuItem fx:id="deleteTokenMenuItem" mnemonicParsing="false" text="Delete token" />
              </items>
            </MenuButton>
            <VBox alignment="CENTER">
               <children>
                  <Group>
                     <children>
                        <Label fx:id="tagLabel" alignment="CENTER" focusTraversable="false" layoutY="51.0" rotate="270.0" text="Some tag" />
                     </children>
                  </Group>
               </children>
            </VBox>
         </children>
      </javafx.scene.layout.VBox>
   </children>
</fx:root>
